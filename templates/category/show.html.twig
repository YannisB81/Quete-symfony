{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <br>
    <h1>Les 3 dernières séries de la catégorie {{ categoryName }} </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Id : {{ program.id }}</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
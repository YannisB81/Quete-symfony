{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media text-center">
  <img class="align-self-start mr-3" height="200px" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body"><br>
    <h1 class="mt-0">Saison {{season.number}} de {{ program.title }}</h1>
    <h2>Episode {{ episode.number }} : {{ episode.title }}</h2>
    <h3>Résumé : </h3>
    <p>{{ episode.synopsis }}</p>
  </div>
</div>

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}
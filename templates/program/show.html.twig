{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media text-center">
  <img class="align-self-start mr-3" height="200px" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body"><br>
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    <h3>Saisons :</h3>
    {% for season in seasons %}
      <li><a href="{{ path("program_season_show", { program: program.id, season: season.id}) }}">{{ season.number }}</a></li>
    {% else %}
      Aucune saison d'enregistré.
    {% endfor %}
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="/actor/{{ actor.id }}">{{ actor.name }} </a></li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
  </div>
</div>

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}